@model TEST.Models.BACSI

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <h2 style="text-align:center">XÓA THÔNG TIN</h2>
        <div class="form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MABS)

            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.TENBS)</label>
                <p class="form-control">@Html.DisplayFor(model => model.TENBS)</p>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.NGAYSINHBS)</label>
                <p class="form-control">@Html.DisplayFor(model => model.NGAYSINHBS)</p>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.SDTBS)</label>
                <p class="form-control">@Html.DisplayFor(model => model.SDTBS)</p>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.DIACHIBS)</label>
                <p class="form-control">@Html.DisplayFor(model => model.DIACHIBS)</p>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.CHUYENMON)</label>
                <p class="form-control">@Html.DisplayFor(model => model.CHUYENMON)</p>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.TRINHDO)</label>
                <p class="form-control">@Html.DisplayFor(model => model.TRINHDO)</p>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <h4>Chắc chắn xóa thông tin này ?</h4>
                    <input type="submit" value="Xóa" class="btn" />
                </div>
            </div>
        </div>
    </div>
    <div style="text-align:center">
        @Html.ActionLink("Trở Lại", "Index")
    </div>
}