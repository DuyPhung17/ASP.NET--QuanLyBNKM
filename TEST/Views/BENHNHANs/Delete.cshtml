@model TEST.Models.BENHNHAN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <h2 style="text-align:center">XÓA THÔNG TIN</h2>
        <div class="form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MABN)

            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.TENBN)</label>
                <p class="form-control">@Html.DisplayFor(model => model.TENBN)</p>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.NGAYSINHBN)</label>
                <p class="form-control">@Html.DisplayFor(model => model.NGAYSINHBN)</p>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.GIOITINH)</label>
                <p class="form-control">@Html.DisplayFor(model => model.GIOITINH)</p>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.DIACHIBN)</label>
                <p class="form-control">@Html.DisplayFor(model => model.DIACHIBN)</p>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.CMND)</label>
                <p class="form-control">@Html.DisplayFor(model => model.CMND)</p>
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.BHYT)</label>
                <p class="form-control">@Html.DisplayFor(model => model.BHYT)</p>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <h4>Chắc chắn xóa thông tin này ?</h4>
                    <input type="submit" value="Xóa" class="btn" />
                </div>
            </div>

            <div style="text-align:center">
                @Html.ActionLink("Trở Lại", "Index")
            </div>
        </div>
    </div>

}
