@model IEnumerable<TEST.Models.DICHVU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, rowsPerPage: 8);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")
}
<div class="heading">
    <h2>THÔNG TIN DỊCH VỤ</h2>
    <form class="form" method="post">
        <input type="text" name="tenDV" placeholder="Nhập tên căn bệnh" class="form-control" />
        <input type="submit" value="Tìm Kiếm" class="btn" />
    </form>
    <p>
        @Html.ActionLink("Thêm Mới", "Create")
    </p>
</div>

<div id="gridContent">
    @grid.GetHtml(
        tableStyle: "table",
        headerStyle: "thead",
        footerStyle: "tfoot",
        fillEmptyRows: true,
        mode: WebGridPagerModes.Numeric,
        alternatingRowStyle: "alternatingRowStyle",
        columns:
            grid.Columns(
            grid.Column(columnName: "STT", header: "STT", format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
            grid.Column("TENDV", "Tên Dịch Vụ "),
            grid.Column("DONGIADV", "Đơn Giá "),

            grid.Column("Chức năng", format: @<text>
                    <a href="@Url.Action("Edit",
                        new { id = item.MADV})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" height="20" /></abbr></a>
                    &nbsp;
                    <a href="@Url.Action("Details",
                        new { id = item.MADV})" class="edit-btn"><abbr title="Xem chi tiết"><img src="/images/detail.png" height="20" /></abbr></a>
                    &nbsp;
                    <a href="@Url.Action("Delete",
                        new { id = item.MADV})" class="edit-btn">
                        <abbr title="Xóa dữ liệu">
                            <img src="/images/delete.png" height="17" />
                        </abbr>
                    </a>
            </text>     )


     ))
</div>
